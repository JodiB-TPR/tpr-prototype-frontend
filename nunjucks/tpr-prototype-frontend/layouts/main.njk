{% extends "govuk-prototype-kit/layouts/govuk-branded.njk" %}

{% set bodyClasses="tpr-prototype-frontend__body" %}

{% block header %}
  <header class="govuk-header tpr-prototype-frontend__header" role="banner" style="padding-bottom: 10px;border-bottom: 0px">
  <div class="govuk-header__container govuk-width-container tpr-prototype-frontend__header__container" style="border-bottom: 0px solid #3d3d3d; padding-top: 10px;">
    <div class="govuk-header__logo" style="width: 20%;padding-right: 0px;">
      <a href="/" class="govuk-header__link">
        <img src="/plugin-assets/tpr-prototype-frontend/assets/images/TPR-Logo-Header.svg" class="govuk-header__logo-image" alt="The Pension Regulator Logo" style="width: 150px; height: 72px;" />
      </a>
    </div>
    <div class="govuk-header__content govuk-header__navigation" style="width: 40%;display: inline-block;border-left: solid 1px #7569ba;padding: 1rem 0 1rem 1rem;margin-left: 0px;margin-bottom: 0px;margin-top: 12px;">
        <a href="/" class="govuk-header__link" style="font-size: 1rem;">
            Managing pension schemes
        </a>
    </div>
    <div class="govuk-header__content govuk-header__navigation" style="width: 40%; text-align: right;">
      <nav style="padding-top:2.1em;">
        <span style="font-size: 1rem;">John Smith &nbsp;|&nbsp; </span>
        <a href="/" class="govuk-header__link" style="font-size: 1rem;">
          Sign out
        </a>
      </nav>
    </div>
  </div>
</header>
{% endblock %}

{% block footer %}
<footer class="govuk-footer">
  <div class="govuk-width-container">
    <div class="govuk-footer__meta">
      <div class="govuk-footer__meta-item govuk-footer__meta-item--grow">
        <h2 class="govuk-visually-hidden">The Pension Regulator links</h2>
        <ul class="govuk-footer__inline-list">
          <li class="govuk-footer__inline-list-item">
            <a class="govuk-footer__link" href="https://www.thepensionsregulator.gov.uk/">
              Main The Pension Regulator Website
            </a>
          </li>
          <li class="govuk-footer__inline-list-item">
            <!-- TODO-2753 work out proper privacy policy link -->
            <a class="govuk-footer__link" href="/">
              Privacy policy
            </a>
          </li>
          <li class="govuk-footer__inline-list-item">
            <!-- TODO-2753 work out proper privacy policy link -->
            <a class="govuk-footer__link" href="../accessibility-statement">
             Accessibility statement
            </a>
          </li>
        </ul>
        <div>&copy; The Pension Regulator 2022</div>
      </div>
    </div>
    <hr class="govuk-footer__section-break">
    <div class="govuk-footer__meta">
      <div class="govuk-footer__meta-item govuk-footer__meta-item--grow">
        <h2>User research links</h2>
        <ul class="govuk-footer__inline-list">
          <li class="govuk-footer__inline-list-item">
            <a class="govuk-footer__link" href="/prototype-admin/clear-data">
              Clear data
            </a>
          </li>
          <li class="govuk-footer__inline-list-item">
            <a class="govuk-footer__link" href="/eligibility/index">
              Eligibility check
            </a>
          </li>
          <li class="govuk-footer__inline-list-item">
            <a class="govuk-footer__link" href="/account/start">
              Create account
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>
{% endblock %}